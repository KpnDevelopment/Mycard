<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#070909</item>
    </style>

    <style name="MaterialSearchViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/mech_icon</item>
    </style>
    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#3DE1F6</item>
        <item name="android:progressTint">#b71c1c</item>
        <item name="android:minWidth">500dp</item>
        <item name="android:width">200dp</item>
    </style>
</resources>
